<!-- TEMPLATES -->
      <template src="Proxy/Missing_Proxies_Template.png" default="True">
         <matches>
            <match name="Name" value="Whatever" />
         </matches>
         <textblocks>
            <link block="default_name" separator=" ">
               <property name="Name"  />
            </link>
         </textblocks>
      </template>
   <!-- Action Template -->
      <template src="Proxy/action.jpg">
         <matches>
            <match name="Type" value="Action" />
         </matches>
         <overlayblocks>
            <conditional>
               <switch property="Rank">
                  <case value="K">
                     <link block="b_k" />
                  </case>
                  <case value="Q">
                     <link block="b_q" />
                  </case>
                  <case value="J">
                     <link block="b_j" />
                  </case>
                  <case value="10">
                     <link block="b_10" />
                  </case>
                  <case value="9">
                     <link block="b_9" />
                  </case>
                  <case value="8">
                     <link block="b_8" />
                  </case>
                  <case value="7">
                     <link block="b_7" />
                  </case>
                  <case value="6">
                     <link block="b_6" />
                  </case>
                  <case value="5">
                     <link block="b_5" />
                  </case>
                  <case value="4">
                     <link block="b_4" />
                  </case>
                  <case value="3">
                     <link block="b_3" />
                  </case>
                  <case value="2">
                     <link block="b_2" />
                  </case>
                  <case value="A">
                     <link block="b_a" />
                  </case>
               </switch>
            </conditional>
            <link block="clubs" />
         </overlayblocks>
         <textblocks>
            <link block="action_name" separator=" ">
               <property name="Name"  />
            </link>
            <link block="cost" separator=" ">
               <property name="Cost"  />
            </link>
            <link block="action_text" separator=" ">
               <property name="Text"  />
            </link>
         </textblocks>
      </template>   
   <!-- Deed Template -->
      <template src="Proxy/deed.jpg">
         <matches>
            <match name="Type" value="Deed" />
         </matches>
         <overlayblocks>
            <conditional>
               <switch property="Rank">
                  <case value="K">
                     <link block="r_k" />
                  </case>
                  <case value="Q">
                     <link block="r_q" />
                  </case>
                  <case value="J">
                     <link block="r_j" />
                  </case>
                  <case value="10">
                     <link block="r_10" />
                  </case>
                  <case value="9">
                     <link block="r_9" />
                  </case>
                  <case value="8">
                     <link block="r_8" />
                  </case>
                  <case value="7">
                     <link block="r_7" />
                  </case>
                  <case value="6">
                     <link block="r_6" />
                  </case>
                  <case value="5">
                     <link block="r_5" />
                  </case>
                  <case value="4">
                     <link block="r_4" />
                  </case>
                  <case value="3">
                     <link block="r_3" />
                  </case>
                  <case value="2">
                     <link block="r_2" />
                  </case>
                  <case value="A">
                     <link block="r_a" />
                  </case>
               </switch>
            </conditional>
            <link block="diamonds" />
         </overlayblocks>
         <textblocks>
            <conditional>
               <if property="Production" value="0">
                  <link block="upkeep">
                     <property name="Upkeep"  />
                  </link>
               </if>
               <else>
                  <link block="production">
                     <property name="Production" format="+{}" />
                  </link>
               </else>
            </conditional>
            <link block="deed_name">
               <property name="Name"  />
            </link>
            <link block="cost">
               <property name="Cost"  />
            </link>
            <link block="deed_text">
               <property name="Text"  />
            </link>
         </textblocks>
      </template>   
